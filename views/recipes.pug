doctype html
html(lang="de")
  head
    title Kochbuch
    include includes/meta.pug
    link(rel="manifest", href="/manifest.json")
    link(rel="stylesheet", href="/css/index.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Merriweather:300,400,700")
    script.
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker
            .register('./service-worker.js')
            .then(reg => console.log('Service Worker: Registered'))
            .catch(err => console.log(`Service Worker: Error: ${err}`));
        });
      }
  body
    if session.authenticated
      a#new-recipe(href="/recipes/new") +
    div#list-wrapper
      div#searchbar
        input(type="search", name="search", placeholder="Suche nach Zutaten, Kategorien oder Titel...")
      div#recipe-list
        noscript Kann Rezepte ohne Javascript nicht darstellen
    script(src="scripts/lib/recipes.js")