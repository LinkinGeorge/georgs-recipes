doctype html
html(lang="de")
  head
    title Kochbuch Login
    include includes/meta.pug
    link(rel="stylesheet", href="/css/login.css")
  body
    form(action="zauberwort", method="post")
      label(for="zauberwort", class=error ? 'error' : '')= error ? 'Falsches Zauberwort, versuchen Sie es nochmal' : 'Bitte geben Sie das Zauberwort ein'
      input(type="text", name="zauberwort", placeholder="Zauberwort", autofocus)
      button(type="submit") Login
      