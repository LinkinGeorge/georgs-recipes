- var pages = { index: 'Rezepte', list: 'Einkaufsliste', plan: 'Wochenplan', settings: 'Einstellungen' }
nav
  #menu
    button.menu-button
      svg.icon.icon-menu
        use(xlink:href='#icon-menu')
    div#current-page= pages[page]
    div.right-buttons
  #nav-wrapper
    a(href="/", class=page === 'index' ? 'active' : '') Rezepte
    a(href="/list", class=page === 'list' ? 'active' : '') Einkaufsliste
    a(href="/plan", class=page === 'plan' ? 'active' : '') Wochenplan
    div.right-buttons
style
  include nav.css
script.
  const button = document.querySelector('.menu-button');
  const nav = document.getElementById('nav-wrapper');
  const navText = document.getElementById('current-page');
  button.addEventListener('click', (e) => {
    e.preventDefault();
    nav.classList.toggle('open');
    navText.classList.toggle('hidden');
  });
svg(aria-hidden='true' style='position: absolute; width: 0; height: 0; overflow: hidden;' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink')
  defs
    symbol#icon-menu(viewbox='0 0 32 32')
      title menu
