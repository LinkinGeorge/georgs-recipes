{
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "linebreak-style": 0,
    "function-paren-newline": 0,
    "no-console": [2, { "allow": ["warn", "error"] } ],
    "no-confusing-arrow": 0,
    "no-unused-expressions": [2, { "allowTernary": true }],
    "no-underscore-dangle": [0, { "allow": ["_id"] }]
  }
}
